{
  "$schema": "vscode://schemas/color-theme",
  "name": "claude-light-theme",
  "type": "light",
  "colors": {
    // ---- 基础颜色 (Base Colors) ----
    "foreground": "#1F2937", // 默认前景色 - 更新为 claude-text-primary
    "focusBorder": "#D97706", // 聚焦元素的边框 - 更新为 claude-primary
    "widget.shadow": "#00000014", // UI 部件的阴影 - 更新为 claude-shadow
    "selection.background": "#D9770626", // 文本选中背景 - 使用 claude-primary 透明
    "errorForeground": "#DC2626", // 错误颜色 - 更新为 claude-error

    // ---- 编辑器 (Editor) ----
    // "editor.background": "#FFFFFF", // 编辑器背景 - 更新为 claude-bg-primary
    "editor.background": "#FFFBF5", // 编辑器背景 - 更新为 claude-bg-primary
    "editor.foreground": "#1F2937", // 编辑器文本 - 更新为 claude-text-primary
    "editor.lineHighlightBackground": "#FEF7ED", // 当前行高亮 - 更新为 claude-bg-secondary
    "editor.selectionBackground": "#D9770626", // 选中区域背景 - 使用 claude-primary 透明
    "editorCursor.foreground": "#D97706", // 光标颜色 - 保持 claude-primary
    "editorWhitespace.foreground": "#9CA3AF", // 空白字符颜色 - 更新为 claude-text-muted

    // ---- 侧边栏 (Side Bar) ----
    "sideBar.background": "#FFFBF5", // 侧边栏背景 - 更新为 claude-bg-primary
    "sideBar.foreground": "#6B7280", // 侧边栏文字 - 更新为 claude-text-secondary
    "sideBar.border": "#F3E8DB", // 侧边栏边框 - 更新为 claude-bg-divider
    "sideBarSectionHeader.background": "#FFFBF5", // 侧边栏节标题背景

    // ---- 活动栏 (Activity Bar) ----
    "activityBar.background": "#FFFBF5", // 活动栏背景 - 更新为 claude-bg-primary
    "activityBar.foreground": "#1F2937", // 活动栏文字 - 更新为 claude-text-primary
    "activityBar.inactiveForeground": "#6B7280", // 非活动状态文字 - 更新为 claude-text-secondary
    "activityBar.border": "#F3E8DB", // 活动栏边框 - 更新为 claude-bg-divider
    "activityBarBadge.background": "#D97706", // 活动栏徽章背景 - 保持 claude-primary
    "activityBarBadge.foreground": "#FFFFFF", // 徽章文字

    // ---- 状态栏 (Status Bar) ----
    "statusBar.background": "#fdf9f0", // 状态栏背景 - 更新为 claude-bg-nav
    "statusBar.foreground": "#6B7280", // 状态栏文字 - 更新为 claude-text-secondary
    "statusBar.border": "#F3E8DB", // 状态栏边框 - 更新为 claude-bg-divider
    "statusBar.noFolderBackground": "#fdf9f0", // 未打开文件夹时的背景
    "statusBarItem.remoteBackground": "#D97706", // 远程状态背景 - 保持 claude-primary
    "statusBarItem.remoteForeground": "#FFFFFF", // 远程状态文字

    // ---- 列表和树 (Lists & Trees) ----
    "list.activeSelectionBackground": "#D9770626", // 列表活动项背景 - 使用 claude-primary 透明
    "list.activeSelectionForeground": "#1F2937", // 活动项文字 - 更新为 claude-text-primary
    "list.inactiveSelectionBackground": "#FEF7ED", // 非活动选中背景 - 更新为 claude-bg-secondary
    "list.focusBackground": "#FED7AA40", // 聚焦背景 - 使用 claude-primary-light 透明
    "list.hoverBackground": "#FFFBF5", // 悬停背景 - 使用 claude-bg-primary

    // ---- 按钮 (Buttons) ----
    "button.background": "#D97706", // 按钮背景 - 保持 claude-primary
    "button.foreground": "#FFFFFF", // 按钮文字 - 保持白色
    "button.hoverBackground": "#B45309", // 按钮悬浮颜色 - 更新为 claude-primary-hover

    // ---- 输入框 (Input) ----
    "input.background": "#FFFFFF", // 输入框背景 - 保持 claude-bg-card
    "input.border": "#F3E8DB", // 输入框边框 - 更新为 claude-bg-divider
    "input.placeholderForeground": "#9CA3AF", // 占位符文字 - 更新为 claude-text-muted
    "inputOption.activeBackground": "#D97706", // 活动选项背景 - 更新为 claude-primary
    "inputOption.activeBorder": "#D97706", // 活动选项边框 - 更新为 claude-primary

    // ---- 标题栏 (Title Bar) ----
    "titleBar.activeBackground": "#fdf9f0", // 活动标题栏背景 - 更新为 claude-bg-nav
    "titleBar.activeForeground": "#1F2937", // 活动标题栏文字 - 更新为 claude-text-primary
    "titleBar.inactiveBackground": "#fdf9f0", // 非活动标题栏背景
    "titleBar.inactiveForeground": "#6B7280", // 非活动标题栏文字 - 更新为 claude-text-secondary
    "titleBar.border": "#F3E8DB" // 标题栏边框 - 更新为 claude-bg-divider
  },
  "tokenColors": [
    {
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#6F6F78", // 注释：中性灰色
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "keyword",
        "storage.modifier",
        "keyword.operator.new",
        "keyword.operator.delete",
        "keyword.operator.logical"
      ],
      "settings": {
        "foreground": "#D73A83" // 关键词 (for, if, return): 粉红色
      }
    },
    {
      "scope": [
        "storage.type",
        "entity.name.type",
        "entity.name.class",
        "support.type",
        "support.class"
      ],
      "settings": {
        "foreground": "#8A46CE" // 类型 (vector, int, Solution): 紫色
      }
    },
    {
      "scope": ["entity.name.function", "support.function"],
      "settings": {
        "foreground": "#1F6FE4" // 函数名 (twoSum): 蓝色
      }
    },
    {
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#2D8F8F" // 数字 (0, 1): 蓝绿色/青色
      }
    },
    {
      "scope": "string",
      "settings": {
        "foreground": "#26831A" // 字符串 (截图中没有，选一个和谐的绿色)
      }
    },
    {
      "scope": "variable.parameter",
      "settings": {
        "foreground": "#B56613" // 函数参数 (nums, target): 橙棕色
      }
    },
    {
      "scope": ["variable", "meta.definition.variable"],
      "settings": {
        "foreground": "#1F1E1D" // 普通变量 (complement, i, j): 默认文本色
      }
    },
    {
      "scope": ["keyword.control.directive.include", "punctuation.definition.directive"],
      "settings": {
        "foreground": "#D73A83", // #include: 粉红色
        "fontStyle": ""
      }
    },
    {
      "scope": ["string.include", "punctuation.definition.string.begin.include", "punctuation.definition.string.end.include"],
      "settings": {
        "foreground": "#2D8F8F" // <vector>, <iostream>: 蓝绿色/青色
      }
    },
    {
      "scope": "punctuation",
      "settings": {
        "foreground": "#1F1E1D" // 标点符号 (;, {, }): 默认文本色
      }
    },
    {
      "scope": [
        "entity.name.tag",
        "meta.tag.sgml.html",
        "markup.deleted.git_gutter"
      ],
      "settings": {
        "foreground": "#D73A83" // HTML标签名 (<html>, <head>, <body>): 粉红色
      }
    },
    {
      "scope": [
        "entity.other.attribute-name",
        "entity.other.attribute-name.html"
      ],
      "settings": {
        "foreground": "#1F6FE4" // HTML属性名 (lang, charset): 蓝色
      }
    },
    {
      "scope": [
        "string.quoted.double.html",
        "string.quoted.single.html",
        "punctuation.definition.string.begin.html",
        "punctuation.definition.string.end.html"
      ],
      "settings": {
        "foreground": "#26831A" // HTML属性值 ("zh-CN", "UTF-8"): 绿色
      }
    },
    {
      "scope": [
        "punctuation.definition.tag.begin.html",
        "punctuation.definition.tag.end.html"
      ],
      "settings": {
        "foreground": "#6F6F78" // HTML标签括号 (<, >): 灰色
      }
    },
    {
      "scope": [
        "support.type.property-name.css",
        "meta.property-name.css"
      ],
      "settings": {
        "foreground": "#B56613" // CSS属性名 (margin, padding, display): 橙棕色
      }
    },
    {
      "scope": [
        "support.constant.property-value.css",
        "meta.property-value.css",
        "constant.numeric.css",
        "keyword.other.unit.css"
      ],
      "settings": {
        "foreground": "#2D8F8F" // CSS属性值 (0, flex, 100vh): 蓝绿色
      }
    },
    {
      "scope": [
        "punctuation.separator.key-value.css",
        "punctuation.terminator.rule.css"
      ],
      "settings": {
        "foreground": "#1F1E1D" // CSS冒号和分号: 默认文本色
      }
    },
    {
      "scope": [
        "punctuation.section.property-list.begin.css",
        "punctuation.section.property-list.end.css"
      ],
      "settings": {
        "foreground": "#6F6F78" // CSS大括号: 灰色
      }
    },
    {
      "scope": [
        "entity.name.tag.css",
        "entity.other.attribute-name.class.css",
        "entity.other.attribute-name.id.css"
      ],
      "settings": {
        "foreground": "#8A46CE" // CSS选择器 (body, .class, #id): 紫色
      }
    }
  ]
}