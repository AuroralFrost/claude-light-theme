{
  "$schema": "vscode://schemas/color-theme",
  "name": "claude-light-theme",
  "type": "light",
  "colors": {
    // ---- 基础颜色 (Base Colors) ----
    "focusBorder": "#D97706",
    "foreground": "#374151",
    "widget.shadow": "#00000010",
    "selection.background": "#D9770630",
    "descriptionForeground": "#6B7280",
    "errorForeground": "#DC2626",
    "icon.foreground": "#6B7280",
    "sash.hoverBorder": "#D97706",
    // ---- 文本 (Text) ----
    "textBlockQuote.background": "#FFF7ED",
    "textBlockQuote.border": "#D97706",
    "textCodeBlock.background": "#F3F4F6",
    "textLink.activeForeground": "#B45309",
    "textLink.foreground": "#D97706",
    "textPreformat.foreground": "#D97706",
    "textSeparator.foreground": "#E5E7EB",
    // ---- 按钮 (Buttons) ----
    "button.background": "#D97706",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#B45309",
    "button.secondaryBackground": "#F3F4F6",
    "button.secondaryForeground": "#374151",
    "button.secondaryHoverBackground": "#E5E7EB",
    "checkbox.background": "#FFFFFF",
    "checkbox.border": "#D1D5DB",
    "checkbox.foreground": "#374151",
    // ---- 下拉菜单 (Dropdown) ----
    "dropdown.background": "#FFFFFF",
    "dropdown.border": "#E5E7EB",
    "dropdown.foreground": "#374151",
    "dropdown.listBackground": "#FFFFFF",
    // ---- 输入框 (Input) ----
    "input.background": "#FFFFFF",
    "input.border": "#E5E7EB",
    "input.foreground": "#374151",
    "input.placeholderForeground": "#9CA3AF",
    "inputOption.activeBackground": "#FFF7ED",
    "inputOption.activeBorder": "#D97706",
    "inputOption.activeForeground": "#D97706",
    "inputValidation.errorBackground": "#FEF2F2",
    "inputValidation.errorBorder": "#DC2626",
    "inputValidation.infoBackground": "#EFF6FF",
    "inputValidation.infoBorder": "#3B82F6",
    "inputValidation.warningBackground": "#FFFBEB",
    "inputValidation.warningBorder": "#F59E0B",
    // ---- 滚动条 (Scrollbar) ----
    "scrollbar.shadow": "#00000005",
    "scrollbarSlider.activeBackground": "#6B728060",
    "scrollbarSlider.background": "#6B728020",
    "scrollbarSlider.hoverBackground": "#6B728040",
    // ---- 徽章 (Badge) ----
    "badge.background": "#FFF7ED",
    "badge.foreground": "#D97706",
    // ---- 列表与树 (Lists and Trees) ----
    "list.activeSelectionBackground": "#FFF7ED",
    "list.activeSelectionForeground": "#D97706",
    "list.dropBackground": "#FFF7ED",
    "list.focusBackground": "#FFF7ED",
    "list.focusForeground": "#374151",
    "list.highlightForeground": "#D97706",
    "list.hoverBackground": "#F9FAFB",
    "list.hoverForeground": "#111827",
    "list.inactiveSelectionBackground": "#F3F4F6",
    "list.inactiveSelectionForeground": "#374151",
    "list.warningForeground": "#F59E0B",
    "list.errorForeground": "#DC2626",
    "tree.indentGuidesStroke": "#E5E7EB",
    // ---- 活动栏 (Activity Bar) ----
    "activityBar.background": "#FFFBF5",
    "activityBar.foreground": "#374151",
    "activityBar.inactiveForeground": "#9CA3AF",
    "activityBar.border": "#F3E8DB",
    "activityBar.activeBorder": "#D97706",
    "activityBarBadge.background": "#D97706",
    "activityBarBadge.foreground": "#FFFFFF",
    // ---- 侧边栏 (Side Bar) ----
    "sideBar.background": "#FXFBF5",
    "sideBar.background": "#FFFBF5", // 修正
    "sideBar.foreground": "#4B5563",
    "sideBar.border": "#F3E8DB",
    "sideBarSectionHeader.background": "#FFFBF5",
    "sideBarSectionHeader.foreground": "#111827",
    "sideBarSectionHeader.border": "#F3E8DB",
    "sideBarTitle.foreground": "#111827",
    // ---- 编辑器组 & 标签 (Editor Groups & Tabs) ----
    "editorGroup.border": "#E5E7EB",
    "editorGroupHeader.tabsBackground": "#FFFBF5",
    "editorGroupHeader.tabsBorder": "#F3E8DB",
    "tab.activeBackground": "#FFFFFF",
    "tab.activeForeground": "#D97706",
    "tab.activeBorderTop": "#D97706",
    "tab.border": "#F3E8DB",
    "tab.hoverBackground": "#FFFFFF",
    "tab.inactiveBackground": "#FFFBF5",
    "tab.inactiveForeground": "#6B7280",
    "tab.unfocusedActiveBackground": "#FFFFFF",
    "tab.unfocusedActiveForeground": "#374151",
    "tab.unfocusedActiveBorderTop": "#9CA3AF",
    // ---- 编辑器 (Editor) ----
    "editor.background": "#FFFFFF",
    "editor.foreground": "#374151",
    "editorLineNumber.foreground": "#D1D5DB",
    "editorLineNumber.activeForeground": "#D97706",
    "editorCursor.foreground": "#D97706",
    "editor.selectionBackground": "#D9770620",
    "editor.inactiveSelectionBackground": "#D9770610",
    "editor.selectionHighlightBackground": "#D9770615",
    "editor.wordHighlightBackground": "#D9770620",
    "editor.wordHighlightStrongBackground": "#D9770630",
    "editor.findMatchBackground": "#FDE04750",
    "editor.findMatchHighlightBackground": "#FDE04730",
    "editor.findRangeHighlightBackground": "#F3F4F6",
    "editor.hoverHighlightBackground": "#D9770610",
    "editor.lineHighlightBackground": "#FFF7ED",
    "editor.lineHighlightBorder": "#00000000",
    "editorLink.activeForeground": "#D97706",
    "editorWhitespace.foreground": "#E5E7EB",
    "editorIndentGuide.background": "#F3F4F6",
    "editorIndentGuide.activeBackground": "#D1D5DB",
    "editorRuler.foreground": "#F3F4F6",
    "editorCodeLens.foreground": "#9CA3AF",
    "editorBracketMatch.background": "#D9770620",
    "editorBracketMatch.border": "#D9770660",
    // ---- 编辑器组件 (Editor Widgets) ----
    "editorWidget.background": "#FFFFFF",
    "editorWidget.border": "#E5E7EB",
    "editorWidget.foreground": "#374151",
    "editorSuggestWidget.background": "#FFFFFF",
    "editorSuggestWidget.border": "#E5E7EB",
    "editorSuggestWidget.foreground": "#374151",
    "editorSuggestWidget.highlightForeground": "#D97706",
    "editorSuggestWidget.selectedBackground": "#FFF7ED",
    "editorHoverWidget.background": "#FFFFFF",
    "editorHoverWidget.border": "#E5E7EB",
    // ---- 概览标尺 (Minimap & Overview Ruler) ----
    "minimap.findMatchHighlight": "#D97706",
    "minimap.selectionHighlight": "#D97706",
    "minimap.errorHighlight": "#DC2626",
    "minimap.warningHighlight": "#F59E0B",
    "minimapSlider.background": "#6B728010",
    "minimapSlider.hoverBackground": "#6B728020",
    "minimapSlider.activeBackground": "#6B728030",
    // ---- Peek View ----
    "peekView.border": "#D97706",
    "peekViewEditor.background": "#FFF7ED",
    "peekViewEditorGutter.background": "#FFF7ED",
    "peekViewEditor.matchHighlightBackground": "#D9770630",
    "peekViewResult.background": "#FFFFFF",
    "peekViewResult.fileForeground": "#374151",
    "peekViewResult.lineForeground": "#6B7280",
    "peekViewResult.matchHighlightBackground": "#D9770630",
    "peekViewResult.selectionBackground": "#FFF7ED",
    "peekViewResult.selectionForeground": "#D97706",
    "peekViewTitle.background": "#FFFFFF",
    "peekViewTitleDescription.foreground": "#6B7280",
    "peekViewTitleLabel.foreground": "#D97706",
    // ---- 差异编辑器 (Diff Editor) ----
    "diffEditor.insertedTextBackground": "#10B98115",
    "diffEditor.removedTextBackground": "#EF444415",
    "diffEditor.diagonalFill": "#E5E7EB",
    // ---- Git 装饰 (Git Decorations) ----
    "gitDecoration.addedResourceForeground": "#059669",
    "gitDecoration.modifiedResourceForeground": "#D97706",
    "gitDecoration.deletedResourceForeground": "#DC2626",
    "gitDecoration.untrackedResourceForeground": "#059669",
    "gitDecoration.ignoredResourceForeground": "#9CA3AF",
    "gitDecoration.conflictingResourceForeground": "#7C3AED",
    "gitDecoration.submoduleResourceForeground": "#6B7280",
    // ---- 状态栏 (Status Bar) ----
    "statusBar.background": "#FFFBF5",
    "statusBar.foreground": "#4B5563",
    "statusBar.border": "#F3E8DB",
    "statusBar.debuggingBackground": "#D97706",
    "statusBar.debuggingForeground": "#FFFFFF",
    "statusBar.noFolderBackground": "#FFFBF5",
    "statusBar.noFolderForeground": "#4B5563",
    "statusBarItem.activeBackground": "#FFF7ED",
    "statusBarItem.hoverBackground": "#FFF7ED",
    "statusBarItem.prominentBackground": "#FFF7ED",
    "statusBarItem.prominentHoverBackground": "#00000008",
    "statusBarItem.remoteBackground": "#D97706",
    "statusBarItem.remoteForeground": "#FFFFFF",
    // ---- 标题栏 (Title Bar) ----
    "titleBar.activeBackground": "#FFFBF5",
    "titleBar.activeForeground": "#111827",
    "titleBar.inactiveBackground": "#FFFBF5",
    "titleBar.inactiveForeground": "#9CA3AF",
    "titleBar.border": "#F3E8DB",
    // ---- 菜单栏 (Menu Bar) ----
    "menubar.selectionBackground": "#FFF7ED",
    "menubar.selectionForeground": "#D97706",
    // ---- 终端 (Terminal) ----
    "terminal.background": "#FFFFFF",
    "terminal.foreground": "#374151",
    "terminal.ansiBlack": "#000000",
    "terminal.ansiBlue": "#2563EB",
    "terminal.ansiBrightBlack": "#6B7280",
    "terminal.ansiBrightBlue": "#3B82F6",
    "terminal.ansiBrightCyan": "#06B6D4",
    "terminal.ansiBrightGreen": "#10B981",
    "terminal.ansiBrightMagenta": "#D946EF",
    "terminal.ansiBrightRed": "#EF4444",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminal.ansiBrightYellow": "#F59E0B",
    "terminal.ansiCyan": "#0891B2",
    "terminal.ansiGreen": "#059669",
    "terminal.ansiMagenta": "#C026D3",
    "terminal.ansiRed": "#DC2626",
    "terminal.ansiWhite": "#E5E7EB",
    "terminal.ansiYellow": "#D97706",
    "terminalCursor.background": "#D97706",
    "terminalCursor.foreground": "#D97706",
    // ---- Notebook ----
    "notebook.cellBorderColor": "#E5E7EB",
    "notebook.focusedCellBorder": "#D97706",
    "notebook.cellStatusBarItemHoverBackground": "#F3F4F6",
    "notebook.cellInsertionIndicator": "#D97706",
    "notebook.focusedCellBackground": "#FFF7ED",
    "notebook.symbolHighlightBackground": "#FFF7ED",
    // ---- 面包屑 (Breadcrumbs) ----
    "breadcrumb.foreground": "#6B7280",
    "breadcrumb.focusForeground": "#D97706",
    "breadcrumb.activeSelectionForeground": "#D97706",
    "breadcrumbPicker.background": "#FFFFFF"
  },
  "tokenColors": [
    {
      "scope": [
        "comment",
        "punctuation.definition.comment"
      ],
      "settings": {
        "foreground": "#9CA3AF",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "keyword",
        "storage.type",
        "storage.modifier",
        "keyword.control",
        "keyword.operator.new",
        "keyword.operator.expression"
      ],
      "settings": {
        "foreground": "#D946EF" // Claude Purple/Pink for keywords
      }
    },
    {
      "scope": [
        "entity.name.function",
        "support.function",
        "meta.function-call",
        "entity.name.method"
      ],
      "settings": {
        "foreground": "#3B82F6" // Claude Blue for functions
      }
    },
    {
      "scope": [
        "string",
        "string.quoted",
        "string.template",
        "constant.other.symbol"
      ],
      "settings": {
        "foreground": "#059669" // Claude Green for strings
      }
    },
    {
      "scope": [
        "constant.numeric",
        "constant.language",
        "constant.character",
        "support.constant"
      ],
      "settings": {
        "foreground": "#D97706" // Claude Orange for numeric/constants
      }
    },
    {
      "scope": [
        "variable",
        "meta.variable",
        "variable.other.object"
      ],
      "settings": {
        "foreground": "#374151" // Dark Grey for standard variables
      }
    },
    {
      "scope": [
        "variable.parameter"
      ],
      "settings": {
        "foreground": "#374151", // Parameters slightly distinct or same
        "fontStyle": ""
      }
    },
    {
      "scope": [
        "entity.name.type",
        "entity.name.class",
        "support.type",
        "support.class"
      ],
      "settings": {
        "foreground": "#7C3AED" // Deep Purple for Types/Classes
      }
    },
    {
      "scope": [
        "keyword.operator",
        "punctuation",
        "meta.brace",
        "meta.delimiter"
      ],
      "settings": {
        "foreground": "#6B7280" // Muted grey for operators/punctuation
      }
    },
    {
      "scope": [
        "entity.name.tag",
        "meta.tag.sgml",
        "markup.deleted.git_gutter"
      ],
      "settings": {
        "foreground": "#D946EF" // Tags matched to Keywords
      }
    },
    {
      "scope": [
        "entity.other.attribute-name"
      ],
      "settings": {
        "foreground": "#D97706" // Attributes in Orange
      }
    },
    {
      "scope": [
        "markup.heading",
        "entity.name.section"
      ],
      "settings": {
        "foreground": "#D97706",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "markup.bold",
        "punctuation.definition.bold"
      ],
      "settings": {
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "markup.italic",
        "punctuation.definition.italic"
      ],
      "settings": {
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "markup.code.inline"
      ],
      "settings": {
        "foreground": "#D946EF",
        "background": "#F3F4F6"
      }
    },
    {
      "scope": [
        "markup.inserted"
      ],
      "settings": {
        "foreground": "#059669"
      }
    },
    {
      "scope": [
        "markup.deleted"
      ],
      "settings": {
        "foreground": "#DC2626"
      }
    },
    {
      "scope": [
        "markup.changed"
      ],
      "settings": {
        "foreground": "#D97706"
      }
    },
    {
      "scope": [
        "support.type.property-name",
        "meta.property-name"
      ],
      "settings": {
        "foreground": "#374151"
      }
    },
    {
      "scope": [
        "meta.object-literal.key",
        "support.type.property-name"
      ],
      "settings": {
        "foreground": "#374151"
      }
    }
  ]
}